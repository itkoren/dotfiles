{{ if eq .chezmoi.os "darwin" -}}
#!{{ lookPath "sh" }}
if [ -d "$HOME/Library/Application Support/Sublime Text/Packages/User" ]; then
  if [ -L /path/to/folder ]; then
    echo "sublime text settings already linked"
  else
    echo "going to create sublime text settings link"
    rm -r "$HOME/Library/Application Support/Sublime Text/Packages/User"
    ln -s "$HOME/.config/sublime/User" "$HOME/Library/Application Support/Sublime Text/Packages/User"
  fi
fi
{{ end -}}
